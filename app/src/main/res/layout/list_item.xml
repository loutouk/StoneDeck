<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/imageView"
        android:fontFamily="@font/amarante"
        android:text="Name"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageView"
        android:text="Class"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_class"
        android:layout_alignStart="@+id/textView_class"
        android:layout_below="@+id/textView_class"
        android:layout_marginTop="10dp"
        android:text="Type"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView_faction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_type"
        android:layout_alignStart="@+id/textView_type"
        android:layout_below="@+id/textView_type"
        android:layout_marginTop="10dp"
        android:text="Faction"
        android:textSize="17sp" />

</RelativeLayout>